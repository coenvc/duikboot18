@model Duikboot.Registration.Web.Models.MeerijderDay
<!-- Planning Section -->  
<div class="page-container"> 

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Inschrijven carnaval 2018</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm("Register", "Registration", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="VOORNAAM *" name="name" id="name" required data-validation-required-message="Vul je voornaam in.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="ACHTERNAAM *"  name="lastname" id="lastName" required data-validation-required-message="Vul je achternaam in.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="MAIL *" id="email" name="email" required data-validation-required-message="Vul je emailadres in.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" placeholder="TELEFOONNUMMER *" name="phone" id="phone" required data-validation-required-message="Vul je telefoonnummer in.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" placeholder="EVENTUELE OPMERKINGEN" id="message" name="message" required data-validation-required-message="Voer een bericht in."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox" value="45">Zaterdag 10 FEB. €45,-</label>
                        <table>
                            <tr>
                                <td>Overdag €20,- OPTOCHT BIEZENMORTEL</td>
                            </tr>
                            <tr>
                                <td>Avond €25,- BERKEL BEEFT INCL TICKET</td>
                            </tr>
                        </table>
                        <span class="pull-right" price="">€45</span>
                        <hr/>
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox" value="35">Zondag 11 FEB. €35,-</label>
                        <table>
                            <tr>
                                <td>Overdag €35,- KOFFIECONCERT GOMMELEN OPTOCHT UDENHOUT </td>
                            </tr>
                        </table>
                        <span class="pull-right price">€35,-</span>
                        <hr/>
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox" value="40">MAANDAG 12 FEB. €40,-</label>
                        <table>
                            <tr>
                                <td>Overdag €20,- VERVOER EN OPTOCHT LOON OP ZAND</td>
                            </tr>
                            <tr>
                                <td>Avond €20,- LOS IN LOON</td>
                            </tr>
                        </table>
                        <span class="pull-right price">€40,-</span>
                        <hr/>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="30">DINSDAG 13 FEB. €30,-</label>
                        <table>
                            <tr>
                                <td>Overdag €20,- DWEILTOUR</td>
                            </tr>
                            <tr>
                                <td>Avond €10,- LICHTJESOPTOCHT</td>
                            </tr>
                        </table>
                        <span class="pull-right price">€30,-</span>
                        <hr/>
                    </div>
                    <input type="hidden" value="10000" name="price" class="price-value" />
                    <span class="pull-right price-total">UW TOTAAL: </span>

                    <input class="btn btn-default btn-post" type="submit"/>
                }
            </div>
        </div> 
    </div>
</div> 

<script type="text/javascript">  
    $(document).ready(function () { 
        $('form').trigger("reset");
        price = 0; 

        $(':checkbox').change(function () {  
            if ($(this).is(':checked')) {
                price = +price + +this["value"];
                console.log(price);
                $(".price-value").val(price);
                
            } 
            else {
                price = +price - +this["value"];
                $(".price-value").val(price);
                console.log($(".price-value").val());
            } 

            $(".price-total").empty();
            $(".price-total").html('<span class="pull-right price-total">UW TOTAAL: €'+price+',- </span>');
            
        });

        $("form").submit(function(event) {
            $(".price-value").val(price);
            return;
        });
    })
</script>

