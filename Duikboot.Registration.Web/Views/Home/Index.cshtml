@using System.Drawing
@{
    ViewBag.Title = "CV D'n Duikboot";
}

@* the fun starts here *@
<!--Header-->
<header>
    <div class="container">
        <div class="intro-text">
            <a href="@Url.Action("Register","Registration")" class="page-scroll btn btn-xl" id="btn-header">Inschrijven</a>
        </div>
    </div>
</header>

<!--end Header-->
<!-- Planning Section -->
<section id="planning">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Planning 2018</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="planning-img" class="team-member">
                    <a href="~/img/content/Voorlopige_planning.png">
                        <img class="img-responsive" src="~/img/content/Voorlopige_planning.png">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Tickets Section -->
<section id="tickets" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Evenementen</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="team-member">
                    <img href="https://www.facebook.com/events/157872401476212" src="~/img/content/Veurgloeien.jpg" class="img-responsive img-circle event-img" alt="" />
                    <h2 class="text-muted">VEURGLOEIEN 2018</h2> 
                    <a href="https://goo.gl/forms/OhWrFkjTgvLGKGrt2" class="btn btn-default"><strong>TICKETS RESERVEREN</strong></a>
                </div> 
                </div>
            <div class="col-lg-4">
                <div class="team-member">
                    <img href="https://www.facebook.com/events/242787269515967" src="~/img/content/MOCP.jpg" class="img-responsive img-circle event-img" alt="" />
                    <h2 class="text-muted">OLD SCHOOL CARNAVALS PARTY 2018</h2>
                    <a href="http://www.mocpudenhout.nl/tickets/" class="btn btn-default"><strong>TICKETS KOPEN</strong></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="team-member">
                    <img href="https://www.facebook.com/events/242787269515967" src="~/img/content/MOCP.jpg" class="img-responsive img-circle event-img" alt="" />
                    <h2 class="text-muted"></h2>
                    <a  class="btn btn-default disabled"><strong>GRATIS ENTREE</strong></a>
                </div>
            </div>
            </div>
        </div>
</section>

<!-- Media section -->
<section id="media">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Media</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <h3 class="text-muted">Aftermovie 2017</h3>
                <div class="fb-video" data-href="https://www.facebook.com/cvdnduikboot/videos/370258723387775/" data-show-text="false">
                    <blockquote cite="https://www.facebook.com/cvdnduikboot/videos/370258723387775/" class="fb-xfbml-parse-ignore">
                        <a href="https://www.facebook.com/cvdnduikboot/videos/370258723387775/">CV D&#039;n Duikboot | Aftermovie Carnaval 2017!</a><p>
                            Daar is hij dan eindelijk! De enige echte aftermovie van carnaval 2017 met CV D&#039;n Duikboot!

                            Veel kijkplezier en tot carnaval 2018!
                        </p>Geplaatst door <a href="https://www.facebook.com/cvdnduikboot/">CV D&#039;n Duikboot</a> op vrijdag 27 oktober 2017
                    </blockquote>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <h3 class="text-muted">Foto's</h3>
            </div>
        </div>
    </div>    
    <div class="container">
        <div class="row">
            <div id="lightgallery">
                @{
                    string[] images = Directory.GetFiles(Server.MapPath(@"~/img/fotos"), "*.jpg")
                        .Select(Path.GetFileName)
                        .ToArray(); 
      
                    foreach (string file in images.Distinct())
                    { 
                        <a href="~/img/fotos/@file" class="gallery-img col-lg-4 col-md-4 col-sm-4 col-xs-6">
                            <figure>
                                <img class="img-responsive img-gallery" src="~/img/fotos/@file">
                            </figure>
                        </a>
                    }
                }

                
            </div>
        </div>
    </div>
</section>

<!-- Timeline Section -->
<section id="timeline" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Timeline</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="~/img/about/1.png" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>FUSIE | 2016</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">De vriendengroepen VG Simpel en VG Boem uit Biezenmortel bundelen sinds 2016 hun krachten en vormen samen 'CV D'n Duikboot'. Nieuwe trailer, meer geluid, meer gezelligheid!</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="~/img/about/2.png" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>CARNAVAL | 2017</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Het eerste jaar voor CV D'n Duikboot! We hebben vier dagen lang geknalt en samen met de Kleuven hebben we op maandagavond de Vorselaer op zijn kop gezet tijdens 'Roeien of Verzuipen'!</p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="~/img/about/3.png" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>DUIKBOOTSPELEN | 2017</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">In de zomer heeft CV D'n Duikboot voor het eerst de 'Olympische Duikbootspelen' georganiseerd. Een zonnige dag gevuld met een buikschuifbaan, een zwembad, muziek, een camping en de nodige drankjes! Het was een geslaagde dag!</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="~/img/about/4.png" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>FOUTE CARNAVALSPARTY | 2017</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Samen met 't Plein in Udenhout steken we deze avond in een nieuw jasje! Artiesten als Veul Gère, Tim Schalx en Zanger Rinus zorgde voor entertainment.</p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="~/img/about/5.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>CARNAVAL | 2018</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Carnaval 2018 staat in het teken van Walt Disney! Ook deze carnaval gaan we er weer vier magisch gezellige dagen van maken! Schrijf je snel in, want vol = vol!</p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>


